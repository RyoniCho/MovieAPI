<service>
  <!-- 서비스 ID (고유해야 함) -->
  <id>MovieApiService</id>
  <!-- 서비스 목록에 표시될 이름 -->
  <name>Movie API Service</name>
  <!-- 서비스 설명 -->
  <description>Movie Project Node.js API Server</description>

  <!-- 실행할 명령어 (node) -->
  <executable>C:\Development\CollectionWeb\MovieAPI\run_service.bat</executable>
  <!-- 배치 파일 내에서 실행하므로 인자 불필요 -->

  <!-- 작업 디렉토리 (App.js가 있는 절대 경로 입력) -->
  <workingdirectory>C:\Development\CollectionWeb\MovieAPI</workingdirectory>

  <!-- 로그 설정 -->
  <logpath>logs</logpath>
  <logmode>roll</logmode>
  
  <!-- 환경 변수 설정 (필요한 경우) -->
  <env name="NODE_ENV" value="production"/>
</service>
